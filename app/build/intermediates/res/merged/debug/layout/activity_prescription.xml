<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tatastrive.e_prescription.Prescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Eform"
            android:maxLines="1"
            android:hint="Form of medicine"

           />


    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:orientation="horizontal">



       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/EMname"
           android:maxLines="1"
           android:hint="Name of medicine"

          />


   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:orientation="horizontal">


       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/EMstrength"
           android:hint="Strength"
           android:maxLines="1"
           />



      <!-- <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Strength"
           android:textSize="18sp"
           android:layout_weight="0.5"
           android:id="@+id/MediStrength"
           />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/EMstrength"
           android:hint="Enter strength"
           android:layout_weight="0.5" />-->


   </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">



      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/EMDosage"
          android:hint="Dosage"
          android:maxLines="1"


          />


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">



      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/EMdays"
          android:inputType="number"
          android:hint="No. of Days"
          android:maxLength="3"
          android:numeric="integer"


          />

  </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:orientation="horizontal">



       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/EmInstructions"

           android:hint="Instructions"
           android:maxLines="1"

            />

   </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#63baac"
            android:text="Generate  Prescription"
            android:id="@+id/GPresc"
           />

    </LinearLayout>






</LinearLayout>
